generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Auth.js ───────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Organization ──────────────────────────────────────────

model Lab {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  country      String
  region       String
  description  String   @default("")
  contactEmail String
  address      String
  lat          Float?
  lng          Float?
  createdAt    DateTime @default(now())

  members   Member[]
  cycles    Cycle[]
  guilds    Guild[]
  projects  Project[]
  courses   Course[]
  stocks    Stock[]
  orders    Order[]
  worksites Worksite[]
  events    Event[]
  equipment Equipment[]
  contacts  Contact[]
  places    Place[]
  semosEmissions SemosEmission[]
  semosRates     SemosRate[]
}

model Member {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  avatar    String   @default("")
  roles     String[] @default([])
  status    String   @default("active")
  isAdmin   Boolean  @default(false)
  joinedAt  DateTime @default(now())
  labId     String
  lab       Lab      @relation(fields: [labId], references: [id])

  wallet     Wallet?
  timesheets Timesheet[]
}

model Cycle {
  id            String   @id @default(cuid())
  name          String
  labId         String
  lab           Lab      @relation(fields: [labId], references: [id])
  startDate     DateTime
  endDate       DateTime
  cooldownStart DateTime
  cooldownEnd   DateTime
  status        String   @default("upcoming")
}

model Guild {
  id          String   @id @default(cuid())
  name        String
  description String   @default("")
  labId       String
  lab         Lab      @relation(fields: [labId], references: [id])
  leaderId    String
  memberIds   String[] @default([])
}

// ─── Botanical ─────────────────────────────────────────────

model Genus {
  id          String    @id @default(cuid())
  latinName   String
  description String    @default("")
  species     Species[]
}

model Species {
  id          String    @id @default(cuid())
  genusId     String?
  genus       Genus?    @relation(fields: [genusId], references: [id])
  latinName   String
  type        String
  edibleParts String[]  @default([])
  interests   String[]  @default([])
  exposures   String[]  @default([])
  hardiness   String    @default("")
  lifeCycle   String    @default("perennial")
  varieties   Variety[]
  stocks      Stock[]
  plants      Plant[]
}

model Variety {
  id           String  @id @default(cuid())
  speciesId    String
  species      Species @relation(fields: [speciesId], references: [id])
  latinName    String
  productivity String  @default("")
  tasteRating  Int     @default(3)
}

// ─── Design ────────────────────────────────────────────────

model Project {
  id         String   @id @default(cuid())
  name       String
  labId      String
  lab        Lab      @relation(fields: [labId], references: [id])
  clientId   String?
  clientName String   @default("")
  phase      String   @default("offre")
  status     String   @default("active")
  startDate  DateTime?
  area       Float    @default(0)

  plantings  Planting[]
  plants     Plant[]
  timesheets Timesheet[]
}

model Plant {
  id          String   @id @default(cuid())
  speciesId   String
  species     Species  @relation(fields: [speciesId], references: [id])
  varietyId   String?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  plantedDate DateTime?
  status      String   @default("planned")
}

model Planting {
  id         String @id @default(cuid())
  projectId  String
  project    Project @relation(fields: [projectId], references: [id])
  name       String
  area       Float  @default(0)
  plantCount Int    @default(0)
}

// ─── Training ──────────────────────────────────────────────

model Course {
  id              String         @id @default(cuid())
  labId           String
  lab             Lab            @relation(fields: [labId], references: [id])
  title           String
  status          String         @default("draft")
  price           Float          @default(0)
  maxParticipants Int            @default(0)
  registrations   Registration[]
  timesheets      Timesheet[]
}

model Registration {
  id            String @id @default(cuid())
  courseId       String
  course        Course @relation(fields: [courseId], references: [id])
  contactId     String
  contactName   String @default("")
  amountPaid    Float  @default(0)
  paymentStatus String @default("pending")
}

// ─── Nursery ───────────────────────────────────────────────

model Stock {
  id         String  @id @default(cuid())
  labId      String
  lab        Lab     @relation(fields: [labId], references: [id])
  speciesId  String
  species    Species @relation(fields: [speciesId], references: [id])
  varietyId  String?
  quantity   Int     @default(0)
  priceEuros Float   @default(0)
}

model Order {
  id           String   @id @default(cuid())
  labId        String
  lab          Lab      @relation(fields: [labId], references: [id])
  customerId   String
  customerName String   @default("")
  status       String   @default("new")
  totalEuros   Float    @default(0)
  createdAt    DateTime @default(now())
}

// ─── Engagement ────────────────────────────────────────────

model Contribution {
  id        String   @id @default(cuid())
  citizenId String?
  type      String
  amount    Float?
  hours     Float?
  date      DateTime
}

model Worksite {
  id                  String   @id @default(cuid())
  labId               String
  lab                 Lab      @relation(fields: [labId], references: [id])
  title               String
  date                DateTime
  location            String
  maxParticipants     Int      @default(0)
  currentParticipants Int      @default(0)
}

model Event {
  id       String   @id @default(cuid())
  labId    String
  lab      Lab      @relation(fields: [labId], references: [id])
  title    String
  date     DateTime
  location String
  type     String
}

model Equipment {
  id       String @id @default(cuid())
  labId    String
  lab      Lab    @relation(fields: [labId], references: [id])
  name     String
  category String
  status   String @default("available")
}

// ─── Partners ──────────────────────────────────────────────

model Partner {
  id           String    @id @default(cuid())
  name         String
  type         String
  contactName  String    @default("")
  contactEmail String    @default("")
  fundings     Funding[]
}

model Funding {
  id        String @id @default(cuid())
  partnerId String
  partner   Partner @relation(fields: [partnerId], references: [id])
  projectId String?
  amount    Float  @default(0)
  status    String @default("pending")
}

// ─── Semos ─────────────────────────────────────────────────

model Wallet {
  id       String @id @default(cuid())
  memberId String @unique
  member   Member @relation(fields: [memberId], references: [id])
  balance  Float  @default(0)
  floor    Float  @default(0)
  ceiling  Float  @default(0)
}

model SemosTransaction {
  id           String   @id @default(cuid())
  fromWalletId String
  toWalletId   String
  amount       Float
  description  String   @default("")
  createdAt    DateTime @default(now())
  type         String   @default("payment")
}

model SemosEmission {
  id     String   @id @default(cuid())
  labId  String
  lab    Lab      @relation(fields: [labId], references: [id])
  amount Float
  date   DateTime
  reason String   @default("")
}

model SemosRate {
  id            String   @id @default(cuid())
  labId         String
  lab           Lab      @relation(fields: [labId], references: [id])
  euroToSemos   Float
  effectiveDate DateTime
}

// ─── Cross-cutting ─────────────────────────────────────────

model Place {
  id      String @id @default(cuid())
  name    String
  address String
  lat     Float?
  lng     Float?
  labId   String?
  lab     Lab?   @relation(fields: [labId], references: [id])
}

model Contact {
  id        String @id @default(cuid())
  labId     String
  lab       Lab    @relation(fields: [labId], references: [id])
  firstName String
  lastName  String
  email     String
  type      String @default("client")
}

model Timesheet {
  id          String   @id @default(cuid())
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id])
  date        DateTime
  hours       Float
  description String   @default("")
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])
  courseId     String?
  course      Course?  @relation(fields: [courseId], references: [id])
  guildId     String?
}
